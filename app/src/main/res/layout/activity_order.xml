<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level" />

    <TextView
        android:id="@+id/order_instruction"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="347dp">

        <TextView
            android:id="@+id/o_num1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/order_num"
            android:fontFamily="@font/handkide"
            android:gravity="center"
            android:text=""
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/o_num3"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/o_num2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/o_num2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="152dp"
            android:background="@drawable/order_num"
            android:fontFamily="@font/handkide"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />

        <TextView
            android:id="@+id/o_num3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:alpha="0.9"
            android:background="@drawable/order_num"
            android:fontFamily="@font/handkide"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.815"
            app:layout_constraintStart_toStartOf="@+id/o_num2"
            app:layout_constraintTop_toBottomOf="@+id/o_num2"
            app:layout_constraintVertical_bias="0.193" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/o_ans1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=""
            android:background="@drawable/order_answer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/handkide"
            />

        <TextView
            android:id="@+id/o_ans2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=""
            android:background="@drawable/order_answer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/handkide"
            />

        <TextView
            android:id="@+id/o_ans3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=""
            android:background="@drawable/order_answer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/handkide"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>